root = true

[*]
charset = utf-8-bom
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2
